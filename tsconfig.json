{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@assets/*": [
                "./assets"
            ],
            "@src/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
        },
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
    ],
    "exclude": [
        "node_modules",
        "<node_internals>/**",
        "bin/**"
    ],
    "typeRoots": ["./global.d.ts" ]
}